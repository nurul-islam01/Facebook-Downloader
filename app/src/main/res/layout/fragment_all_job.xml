<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:layout_marginBottom="10dp"
    tools:context="royal.ondemandservices.ServiceProviderFragment.AllJobFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Service:"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycler_home_serview"
                android:layout_height="300dp">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Categories:"
                android:textAppearance="?android:textAppearanceMedium"
                android:padding="10dp"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="200dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="Home Service"
                        android:id="@+id/home_Service_cat"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:background="@drawable/homeservice_categories"
                        android:layout_height="100dp" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="Tuition Service"
                        android:id="@+id/tution_service"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:background="@drawable/tution_categories"
                        android:layout_height="100dp" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="IT and SoftwareJob"
                        android:id="@+id/it_software_service"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:background="@drawable/it_and_softwarecategories"
                        android:layout_height="100dp" />

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tution Service:"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycler_tution_service"
                android:layout_height="300dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
